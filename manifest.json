{
    "manifest_version": 3,
    "name": "Guide Country",
    "description": "displays info on all of the world's countries, allowing users to filter countries by name and region, and view detailed info on each country.",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "./icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-64.png",
        "128": "icons/icon-128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+9",
                "mac": "Command+Shift+9"
            }
        }
    }
}